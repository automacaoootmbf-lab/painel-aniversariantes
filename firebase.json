{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "**", "destination": "/index.html" }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "frame-ancestors 'self' https://eletrobras.sharepoint.com https://eletrobras.sharepoint.com/sites/OOTM-TransmissoMinaseVitria"
          }
        ]
      }
    ]
  }
}

